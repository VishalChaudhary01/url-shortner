<div class="container mt-5 mb-3">
     <h1>URL Shortner</h1>
     <form action="/home" method="POST">
          <label for="url">Enter your original URL: </label>
          <input type="text" name="url" class="p-1 m-1" placeholder="https://example.com">
          <button type="submit" class="btn btn-primary">Generate</button>
     </form>
     <% if (locals.id) { %>
          <p>URL Generated: <a href="http://localhost:5000/<%= id %>">http://localhost:5000/<%= id %></a></p>
     <% } %>     
</div>